<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="center_horizontal"
      android:text="Dietary Plan Overview"
      android:textColor="@color/dgm_black"
      android:textSize="22sp"
      android:textStyle="bold"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="Here is your custom plan"
      android:textSize="18sp"
      />

  <TextView
      android:id="@+id/tvGoalPerWeek"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Lose 5 lbs per week"
      android:textSize="18sp"
      />

  <TextView
      android:id="@+id/tvGoalTimeConstraint"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Over the next 5 weeks to reach your goal."
      android:textSize="18sp"
      />


  <Button
      android:id="@+id/submitButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:background="@color/dgm_green"
      android:text="Let's Get Started!"
      android:textColor="@color/white"
      />


</LinearLayout>