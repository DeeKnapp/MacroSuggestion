<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >


  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="During my day to day, I am typically..."
      android:textColor="@color/dgm_black"
      android:textSize="22sp"
      android:id="@+id/tvWelcomeUser"
      />


  <RadioGroup
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:layout_marginTop="5dp"
      android:orientation="vertical"
      >

    <RadioButton
        android:id="@+id/lightActivity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/green_rounded_rect_selector"
        android:button="@null"
        android:gravity="center_horizontal|center_vertical"
        android:text="Lightly Activity"
        />

    <RadioButton
        android:id="@+id/moderateActivity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/green_rounded_rect_selector"
        android:button="@null"
        android:gravity="center_horizontal|center_vertical"
        android:text="Moderately Active"
        />

    <RadioButton
        android:id="@+id/intenseActivity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/green_rounded_rect_selector"
        android:button="@null"
        android:gravity="center_horizontal|center_vertical"
        android:text="Intensely Active"
        />


  </RadioGroup>


  <Button
      android:id="@+id/submitButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:background="@color/dgm_green"
      android:text="Calculate Diet Plan"
      android:textColor="@color/white"
      />


</LinearLayout>