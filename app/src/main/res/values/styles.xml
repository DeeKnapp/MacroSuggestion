<resources>

  <!--Base application theme. -->
  <style name="MacroSuggestionTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorControlNormal">@color/white</item>
  </style>

  <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
    <item name="actionMenuTextColor">@color/white</item>
    <item name="selectableItemBackground">?android:selectableItemBackground</item>
    <item name="background">@color/dgm_blue</item>
  </style>

  <style name="MacroSuggestionTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <!-- Set proper title size -->
    <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
    <!-- Set title color -->
    <item name="android:textColor">@color/white</item>
    <item name="background">@color/dgm_blue</item>
  </style>

  <style name="CollapsedAppBar" parent="Widget.AppCompat.Toolbar">
    <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="TextAppearance.App.MacrosFragment" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/macros_mid_color</item>
    <item name="android:textSize">14sp</item>
    <item name="android:colorAccent">@color/macros_mid_color</item>

  </style>

  <style name="TextAppearance.App.CaloriesFragment" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/calories_mid_color</item>
    <item name="android:textSize">14sp</item>
    <item name="android:colorAccent">@color/calories_mid_color</item>
  </style>

  <style name="TextAppearance.App.WaterFragment" parent="@android:style/TextAppearance">
    <item name="android:textColor">@color/water_mid_color</item>
    <item name="android:textSize">14sp</item>
    <item name="android:colorAccent">@color/water_mid_color</item>
  </style>

</resources>
